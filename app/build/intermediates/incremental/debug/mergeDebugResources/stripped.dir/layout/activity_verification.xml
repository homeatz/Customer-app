<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".Activities.VerificationActivity"
    tools:ignore="UseCompoundDrawables">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:isScrollContainer="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/login_top_bg"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:onClick="back"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/back_iv"
                        app:tint="@color/colorWhite"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/back"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_14sdp" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:text="@string/verify_account"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_20sdp" />

                <TextView
                    android:id="@+id/phoneNumber_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:text="@string/enter_your_otp_code_here"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_otp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:text="@string/your_otp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"

                    android:focusableInTouchMode="true">


                    <EditText
                        android:id="@+id/ed1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_weight="1"
                        android:maxLength="1"
                        android:textColor="@color/text_black"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:gravity="center"
                        android:background="@drawable/bg_otp_stroke"/>

                    <EditText
                        android:id="@+id/ed2"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_weight="1"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:textColor="@color/text_black"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:inputType="number"
                        android:gravity="center"
                        android:background="@drawable/bg_otp_stroke"/>

                    <EditText
                        android:id="@+id/ed3"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_weight="1"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:textColor="@color/text_black"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:inputType="number"
                        android:gravity="center"
                        android:background="@drawable/bg_otp_stroke"/>
                    <EditText
                        android:id="@+id/ed4"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_weight="1"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:textColor="@color/text_black"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:inputType="number"
                        android:gravity="center"
                        android:background="@drawable/bg_otp_stroke"/>
                    <EditText
                        android:id="@+id/ed5"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_weight="1"
                        android:textColor="@color/text_black"
                        android:maxLength="1"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:gravity="center"
                        android:background="@drawable/bg_otp_stroke"/>

                    <EditText
                        android:id="@+id/ed6"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_weight="1"
                        android:maxLength="1"
                        android:textColor="@color/text_black"
                        android:maxLines="1"
                        android:imeOptions="actionDone"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:inputType="number"
                        android:gravity="center"
                        android:background="@drawable/bg_otp_stroke"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_2sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/don_t_receive_sms"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_13sdp" />

                    <TextView
                        android:onClick="resendOTP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/resend_code"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_13sdp" />

                </LinearLayout>

                <LinearLayout
                    android:onClick="verify"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:background="@drawable/orange_round_corner_bg"
                    android:elevation="@dimen/_2sdp"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    tools:ignore="RtlSymmetry">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/verify"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_14sdp" />

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:padding="@dimen/_10sdp"
                        android:rotation="180"
                        android:src="@drawable/back_iv"
                        app:tint="@color/colorWhite"
                        tools:ignore="ContentDescription" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>