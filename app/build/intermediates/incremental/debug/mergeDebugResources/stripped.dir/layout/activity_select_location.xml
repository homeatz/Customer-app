<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UnusedClass.SelectLocationActivity">

    <ImageView
        android:id="@+id/ivLoading"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="@drawable/find_location"/>

    <TextView
        android:id="@+id/tvFindLocationg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textSize="15dp"
        android:padding="2dp"
        android:layout_below="@+id/ivLoading"
        android:layout_centerHorizontal="true"
        android:text="@string/finding_location"/>

    <TextView
        android:id="@+id/tvPleaseWait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textSize="16dp"
        android:padding="3dp"
        android:textStyle="bold"
        android:layout_below="@+id/tvFindLocationg"
        android:layout_centerHorizontal="true"
        android:text="@string/please_wait"/>
</RelativeLayout>