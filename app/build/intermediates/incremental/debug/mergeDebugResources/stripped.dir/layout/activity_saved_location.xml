<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/savedloc_bg1"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Map.SavedLocationActivity"
    tools:ignore="UseCompoundDrawables">


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif_view"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:background="@color/transparent"
        android:src="@drawable/homeaztz_gif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_current_location"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/location_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:textAlignment="center"
        android:textColor="@color/orange"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="r\nj" />

    <ProgressBar
        android:id="@+id/progress_abr"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:indeterminateTint="@color/colorBlack"
        android:visibility="gone" />

</LinearLayout>